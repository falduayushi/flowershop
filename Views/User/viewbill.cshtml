
@{
    ViewData["Title"] = "viewbill";
    Layout = "~/Views/Shared/bill.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flower Menegment System</title>
    <style>
        body {
            background-color: #F6F6F6;
            margin: 0;
            padding: 0;
        }

        h1, h2, h3, h4, h5, h6 {
            margin: 0;
            padding: 0;
        }

        p {
            margin: 0;
            padding: 0;
        }

        .container {
            width: 80%;
            margin-right: auto;
            margin-left: auto;
        }

        .brand-section {
            background-color: #0d1033;
            padding: 10px 40px;
        }

        .logo {
            width: 50%;
        }

        .row {
            display: flex;
            flex-wrap: wrap;
        }

        .col-6 {
            width: 50%;
            flex: 0 0 auto;
        }

        .text-white {
            color: #fff;
        }

        .company-details {
            float: right;
            text-align: right;
        }

        .body-section {
            padding: 16px;
            border: 1px solid gray;
        }

        .heading {
            font-size: 20px;
            margin-bottom: 08px;
        }

        .sub-heading {
            color: #262626;
            margin-bottom: 05px;
        }

        table {
            background-color: #fff;
            width: 100%;
            border-collapse: collapse;
        }

            table thead tr {
                border: 1px solid #111;
                background-color: #f2f2f2;
            }

            table td {
                vertical-align: middle !important;
                text-align: center;
            }

            table th, table td {
                padding-top: 08px;
                padding-bottom: 08px;
            }

        .table-bordered {
            box-shadow: 0px 0px 5px 0.5px gray;
        }

            .table-bordered td, .table-bordered th {
                border: 1px solid #dee2e6;
            }

        .text-right {
            text-align: end;
        }

        .w-20 {
            width: 20%;
        }

        .float-right {
            float: right;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="brand-section">
            <div class="row">
                <div class="col-6">
                    <h1 class="text-white">Flosn</h1>
                </div>
                <div class="col-6">
                    <div class="company-details">
                        <p class="text-white">Flower Management System</p>
                        <p class="text-white">Flower Management System</p>
                        <p class="text-white">+91 1234567890</p>
                    </div>
                </div>
            </div>
        </div>
    @{

            @foreach (System.Data.DataRow dr in ViewBag.order_details.Rows)
            {
                <div class="body-section">
                    <div class="row">
                <div class="col-6">
                    <h2 class="heading">Invoice No.: @dr["o_id"].ToString()</h2>
                    <p class="sub-heading">Email Address: @dr["email"].ToString() </p>
                </div>
                <div class="col-6">
                    <p class="sub-heading">Full Name: @dr["fname"].ToString()  @dr["lname"].ToString()  </p>
                            <p class="sub-heading">Address: @dr["address"].ToString() </p>
                            <p class="sub-heading">Phone Number: @dr["phoneno"].ToString() </p>
                            <p class="sub-heading">City,State,Pincode: @dr["city_name"].ToString() , @dr["state"].ToString() , @dr["code"].ToString() </p>
                </div>
            </div>
        </div>
        }
    }
        <div class="body-section">
            <h3 class="heading">Ordered Items</h3>
            <br>
            <table class="table-bordered">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th class="w-20">Price</th>
                        <th class="w-20">Quantity</th>
                        <th class="w-20">Grandtotal</th>
                    </tr>
                </thead>
                <tbody>

                @{
                        int total = 0;
                     foreach (System.Data.DataRow dr in ViewBag.bill.Rows)
                     {

                            String price = dr["p_price"].ToString();

                            total = total + int.Parse(price);

                            ViewBag.total = total;
                            <tr>
                                <td>@dr["p_name"].ToString()</td>
                                <td>@dr["p_price"].ToString()</td>
                                <td>@dr["quntity"].ToString()</td>
                                <td>@dr["p_price"].ToString()</td>
                            </tr>
                     }
                }
                    <tr>
                        <td colspan="3" class="text-right">Sub Total</td>
                        <td>@ViewBag.total</td>
                    </tr>
                </tbody>
            </table>
            <br>
            <h3 class="heading">Payment Status: Pending</h3>
            <h3 class="heading">Payment Mode: Cash on Delivery</h3>
        </div>

        <div class="body-section">
            <p>
                &copy; Copyright 2023 - Flower Management System. All rights reserved.
                <a href="https://www.Flower Management System.com/" class="float-right">www.Flower Management System.com</a>
            </p>
        </div>
    </div>

</body>
</html>



